<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kh.ex02.PointMapper">
	<update id="updatePoint">
		update tbl_user set
			u_point = u_point + #{point}
		where u_id = #{u_id}
	</update>
</mapper>